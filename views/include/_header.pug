doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title=title
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")

    body
        if role==="admin"
            div.dropdown.position-fixed.bottom-0.end-0.mb-3.me-3.bd-mode-toggle
                button#bd-theme.btn.btn-bd-primary.py-2.dropdown-toggle.d-flex.align-items-center.text-primary(type="button" aria-expanded="false" data-bs-toggle="dropdown" aria-label="Toggle theme (light)")
                    h3
                        i.bi.bi-person-add
                
                ul.dropdown-menu.dropdown-menu-end.shadow(aria-labelledby="bd-theme-text")
                    li
                        button.dropdown-item.d-flex.align-items-center.text-primary(type="button" data-bs-theme-value="light" aria-pressed="true" onclick="location.href='/register_physician'")
                            b
                                i.bi.bi-person-workspace
                                | Register a Physician
                    
                    li
                        button.dropdown-item.d-flex.align-items-center.text-danger(type="button" data-bs-theme-value="dark" aria-pressed="false" onclick="location.href='/register_patient'")
                            b
                                i.bi.bi-person-hearts
                                | Create Patient Profile 
                    
        
    

    header.navbar.sticky-top.bg-info.flex-md-nowrap.p-0.shadow(data-bs-theme="dark")
        a.navbar-brand.col-md-3.col-lg-2.me-0.px-3.fs-6.text-black(href="#")
            img(src="img/medical_logo.png" width="40" alt="compaany logo" class="m-2")
            b HOSPITAL MANAGEMENT SYSTEM
       
        ul.navbar-nav.flex-row.d-md-none
            li.nav-item.text-nowrap
                button.nav-link.px-3.text-black(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSearch" aria-controls="navbarSearch" aria-expanded="false" aria-label="Toggle search")
                    i.bi.bi-search
               
            li.nav-item.text-nowrap
                button.nav-link.px-3.text-black(type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation")
                    i.bi.bi-list
               
       

        div#navbarSearch.navbar-search.w-100.collapse
            input.form-control.w-100.rounded-0.border-0(type="text" placeholder="Search" aria-label="Search")
       
    